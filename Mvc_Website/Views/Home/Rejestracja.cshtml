@model Mvc_Website.Models.registration

@{
    ViewBag.Title = "Zgłoszenie Food Trucka";
}
<h4>@ViewBag.Title</h4>
<h5>@ViewBag.Message</h5>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section>
        <div class="container col-mx-3">
            <h3>Food Truck Info.</h3>
        </div>
    </section>

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.NameOfTruck, htmlAttributes: new { @class = "control-label col-xs-3" })
            <div class="col-xs-2">
                @Html.EditorFor(model => model.NameOfTruck, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NameOfTruck, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.YearSince, htmlAttributes: new { @class = "control-label col-xs-3" })
            <div class="col-xs-2">
                @Html.EditorFor(model => model.YearSince, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.YearSince, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "control-label col-xs-3" })
            <div class="col-xs-2">
                @Html.DropDownList("City", new List<SelectListItem>
             {
                 new SelectListItem {Text = "Wrocław", Value = "1"},
                 new SelectListItem {Text = "Poznań", Value = "2"},
                 new SelectListItem {Text = "Warszawa", Value = "3"}
             }, "-- Wybierz --")
                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-xs-3" })
            <div class="col-xs-2">
                @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", maxlength = 2000, height = "250", width = "300" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                <textarea class="form-control"
                          id="Description"
                          name="Description"
                          rows="2"
                          cols="20">
                 
                </textarea>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.kasa, htmlAttributes: new { @class = "control-label col-xs-3" })
            <div class="col-xs-2">
                @Html.RadioButtonFor(m => m.kasa, "Male")
                @Html.RadioButtonFor(m => m.kasa, "Female")
                @Html.ValidationMessageFor(model => model.kasa, "", new { @class = "text-danger" })
            </div>
        </div>

        <section>
            <div class="container col-mx-3">
                <h3>Food Truck Menu:</h3>
            </div>
        </section>

        <section>
            <div class="container col-mx-3">
                <h3>Dane Kontaktowe.</h3>
            </div>
        </section>

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-xs-3" })
            <div class="col-xs-2">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label col-xs-3" })
            <div class="col-xs-2">
                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-xs-3" })
            <div class="col-xs-2">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FacebookFunpage, htmlAttributes: new { @class = "control-label col-xs-3" })
            <div class="col-xs-2">
                @Html.EditorFor(model => model.FacebookFunpage, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FacebookFunpage, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Website, htmlAttributes: new { @class = "control-label col-xs-3" })
            <div class="col-xs-2">
                @Html.EditorFor(model => model.Website, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Website, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Prześlij zgłoszenie" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}